<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_form">

    <!--提现-->

    <include layout="@layout/form_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp55"
        android:layout_marginStart="@dimen/dp13"
        android:gravity="center_vertical"
        android:text="请选择银行卡"
        android:textColor="#222222"
        android:textSize="@dimen/sp20" />


    <LinearLayout
        android:id="@+id/ll_bind_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp74"
        android:layout_marginEnd="@dimen/dp13"
        android:layout_marginStart="@dimen/dp13"
        android:background="@drawable/shape_dialog"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_bank"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_marginStart="@dimen/dp15"
            android:src="@mipmap/icon_zhifubao" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:gravity="center_vertical"
                android:text="@string/default_text"
                android:textColor="#222222"
                android:textSize="@dimen/sp20" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp20"
            android:src="@mipmap/icon_right" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp13"
        android:layout_marginStart="@dimen/dp13"
        android:layout_marginTop="@dimen/dp13"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:text="提现金额"
                android:textColor="#222222"
                android:textSize="@dimen/sp24" />

            <TextView
                android:id="@+id/tv_withdrawRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（收取0.0%服务费）"
                android:textColor="@color/text_content"
                android:textSize="@dimen/sp20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="￥"
                android:textColor="#222222"
                android:textSize="@dimen/sp32" />

            <EditText
                android:id="@+id/et_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/hint_edit"
                android:inputType="number"
                android:textColor="#222222"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp28" />
        </LinearLayout>

        <View style="@style/view_line_short" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp20"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="可用余额0.00元"
                android:textColor="#999999"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/tv_txRatePrcie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp13"
                android:layout_marginStart="@dimen/dp20"
                android:gravity="center_vertical"
                android:textColor="@color/btn_normal"
                android:textSize="@dimen/sp20" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_ok"
            style="@style/btn_ok"
            android:layout_marginBottom="@dimen/dp30"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp53"
            android:text="@string/withdraw_ok" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp13"
        android:layout_marginStart="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center_vertical"
        android:visibility="invisible">

        <ImageView
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:src="@mipmap/icon_ul" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp13"
            android:text="两小时内到账"
            android:textColor="#666666"
            android:textSize="@dimen/sp20" />

    </LinearLayout>


</LinearLayout>