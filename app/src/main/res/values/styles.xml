<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--Primary:主要的，最初的 primary school ：小学-->
        <item name="colorPrimary">@color/read_dialog_bg</item>
        <item name="colorPrimaryDark">@color/read_dialog_bg</item>
        <!--Accent:重音，重读-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <!-- 对话框主题 -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="guideTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <!-- 窗体公用样式 -->
    <style name="base_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_form</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 内容文本 -->
    <style name="text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>


    <!-- ********************************标题 ******************************** -->
    <!-- 标题布局 -->
    <style name="form_title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp80</item>
        <item name="android:background">@color/bg_form_head</item>
    </style>

    <!-- 标题文本 -->
    <style name="form_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp40</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp22</item>
        <!-- <item name="android:textStyle">bold</item> -->

    </style>


    <!-- 菜单右边箭头 -->
    <style name="tab3_menu_item_right">
        <item name="android:layout_width">@dimen/dp16</item>
        <item name="android:layout_height">@dimen/dp16</item>
        <item name="android:layout_marginEnd">@dimen/dp21</item>
        <item name="android:src">@mipmap/icon_right</item>
    </style>

    <style name="item_right">
        <item name="android:layout_width">@dimen/dp20</item>
        <item name="android:layout_height">@dimen/dp20</item>
        <item name="android:layout_marginEnd">@dimen/dp13</item>
        <item name="android:src">@mipmap/icon_right</item>
    </style>


    <!-- *********************************个人资料 ********************************* -->


    <!-- 个人资料_项 -->
    <style name="my_info_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp64</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--内容编辑-->
    <style name="my_info_edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/dp38</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/hint_edit</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="my_info_edit1" parent="my_info_edit">
        <item name="android:layout_marginEnd">@dimen/dp5</item>
    </style>



    <!--注册-->
    <style name="update_pwd_title" parent="my_info_title">
        <item name="android:layout_width">@dimen/dp120</item>
    </style>

    <!-- 左边标题 -->
    <style name="my_info_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <!-- 内容显示 -->
    <style name="my_info_content" parent="text_content">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">@dimen/dp13</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>


    <!--文本编辑框，登录注册等-->
    <style name="base_edit_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp57</item>
        <item name="android:background">@drawable/shape_edit</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="edit_icon">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:layout_marginStart">@dimen/dp13</item>
    </style>

    <style name="base_edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp13</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_edit</item>
        <item name="android:hint">@string/hint_edit</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--收益显示标题描述-->
    <style name="tab1_profit_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textColor">#666666</item>
    </style>


    <!--android:layout_width="0dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_weight="1"-->
    <!--android:orientation="vertical"-->
    <style name="tab3_profit_item_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab3_money">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_normal</item>
        <item name="android:textSize">@dimen/sp24</item>
    </style>

    <!--android:layout_width="0dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_weight="1"-->
    <!--android:orientation="vertical"-->

    <style name="layout_same_item_horizon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dp145"-->
    <!--android:layout_marginTop="@dimen/dp20"-->
    <!--android:background="@color/white"-->

    <style name="tab3_menu_item_grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp145</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="tab3_menu_icon">
        <item name="android:layout_width">@dimen/dp35</item>
        <item name="android:layout_height">@dimen/dp35</item>
    </style>

    <!-- 菜单内容 -->
    <style name="tab3_menu_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp13</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp22</item>
    </style>

    <!-- *********************************tab3end ********************************* -->


    <!-- ********************************分割线 ******************************** -->

    <!-- view分割线样式 -->
    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <!-- view分割线样式短 -->
    <style name="view_line_short" parent="view_line">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- view分割线样式 -->
    <style name="view_line_vertical">
        <item name="android:layout_width">@dimen/dp1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <!-- ********************************分割线end ******************************** -->


    <!-- 确认按钮、提交按钮等 -->
    <style name="btn_ok">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp58</item>
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:text">@string/btn_ok</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp22</item>
    </style>


    <style name="btn_get_code">
        <item name="android:layout_width">@dimen/dp115</item>
        <item name="android:layout_height">@dimen/dp33</item>
        <item name="android:layout_marginEnd">@dimen/dp13</item>
        <item name="android:background">@drawable/shape_btn_getcode</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/btn_get_code</item>
        <item name="android:textColor">@color/btn_normal</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>


    <!-- 添加门票复选框 -->
    <style name="checkbox_register" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>

    <!-- 标题_筛选 -->
    <style name="form_select_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/select_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <!-- popupwindow -->
    <!-- 从下到上 -->
    <style name="app_pop">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>

    <!-- 从上到下 -->
    <style name="app_pop2">
        <item name="android:windowEnterAnimation">@anim/pop_up2</item>
        <item name="android:windowExitAnimation">@anim/pop_down2</item>
    </style>

    <!-- 从左到右 -->
    <style name="app_pop_1">
        <item name="android:windowEnterAnimation">@anim/pop_down_1</item>
        <item name="android:windowExitAnimation">@anim/pop_up_1</item>
    </style>

    <!-- 可见度从无到有 -->
    <style name="app_pop_2">
        <item name="android:windowEnterAnimation">@anim/pop_down_2</item>
        <item name="android:windowExitAnimation">@anim/pop_up_2</item>
    </style>

    <!-- 可见度从无到有 -->
    <style name="app_pop_3">
        <item name="android:windowEnterAnimation">@anim/alpha</item>
        <item name="android:windowExitAnimation">@anim/alpha_2</item>
    </style>

</resources>
